INSERT INTO superbowls(Date,SB,Winner,Winner_Pts,Loser,Loser_Pts,MVP,Stadium,City,State) VALUES ('Jan 28 1996','XXX (30)','Dallas Cowboys',27,'Pittsburgh Steelers',17,'Larry Brown','Sun Devil Stadium','Tempe','Arizona');

SELECT Winner, ROUND(AVG(Winner_Pts)) AS points FROM superbowls GROUP BY Winner;

SELECT Winner, SUM(Winner_Pts) AS total_points FROM superbowls GROUP BY Winner HAVING total_points > 75;

SELECT Winner, Loser,
    CASE
        WHEN Winner_Pts - Loser_Pts <= 3 THEN "nail biter"
        WHEN Winner_Pts - Loser_Pts <= 10 THEN "close game"
        WHEN Winner_Pts - Loser_Pts <= 20 THEN "not very close"
        ELSE "blow-out"
    END as "result_summary"
FROM superbowls
GROUP BY Date;

SELECT Winner, Loser FROM superbowls WHERE Winner LIKE "%Patriots%" OR Loser LIKE "%Patriots%";
