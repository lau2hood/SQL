CREATE TABLE superbowls(
  Date      TEXT PRIMARY KEY,
  SB         TEXT,
  Winner     TEXT,
  Winner_Pts INTEGER,
  Loser      TEXT,
  Loser_Pts  INTEGER,
  MVP        TEXT,
  Stadium    TEXT,
  City       TEXT,
  State      TEXT
);
